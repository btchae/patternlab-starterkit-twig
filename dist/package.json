{
  "description": "Starter kit for Pattern Lab",
  "devDependencies": {
    "bower": "^1.7.9",
    "css-loader": "^0.23.1",
    "es6-promise": "^3.3.1",
    "eslint": "^3.4.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-file": "^0.3.0",
    "gulp-inject": "^4.1.0",
    "gulp-markdox": "^0.1.1",
    "gulp-rename": "^1.2.2",
    "gulp-svgmin": "^1.2.2",
    "gulp-svgstore": "^6.0.0",
    "gulp-watch": "^4.3.9",
    "node-sass": "^3.8.0",
    "sass-lint": "^1.9.1",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "private": false,
  "scripts": {
    "install": "bower install",
    "build": "gulp icons && webpack --config webpack.config.build.js",
    "dev": "gulp icons && webpack --config webpack.config.dev.js",
    "watch": "gulp icons:watch && webpack --config webpack.config.dev.js --watch",
    "lint": "npm run styles:lint -s && npm run js:lint -s",
    "styles:lint": "sass-lint _patterns/\\*\\*/\\*.scss -v -q",
    "js:lint": "eslint _patterns/\\*\\*/\\*.js && eslint js/main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/moxie-lean/patternlab-starterkit-twig"
  }
}
