<ol class="m__pagination">

    {% if pagination.prev and pagination.prev.link|length %}
        <li>
            <a href="{{ pagination.prev.link }}" class="m__pagination__prev">Previous</a>
        </li>
    {% endif %}

    {% for page in pagination.pages %}
        <li>
            {% if page.link %}
                <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
            {% else %}
                <span class="{{ page.class }}">{{ page.title }}</span>
            {% endif %}
        </li>
    {% endfor %}

    {% if pagination.next and pagination.next.link|length %}
        <li>
            <a href="{{ pagination.next.link }}" class="m__pagination__next">Next</a>
        </li>
    {% endif %}

</ol>
